extends layout
block content
    .container
        nav.navbar.navbar-default.navbar-fixed-top
                .container
                    include ./navbar.jade
        .container-fluid
            .row
                h1.header-dim.well Register Elderly
                p.lead --------------------
                p * required
                br
                form#registerelderlyform.form-horizontal(role='form', action="#{url}",method="post", style='max-width: 700px;')
                    if(!own)
                        .form-group.has-feedback
                            label.col-sm-4(for="relationship") Relationship ; *
                            .col-sm-8
                                select.form-control(name="relationship",placeholder="Select Relationship")
                                    option parent
                                    option child
                                    option spouse
                                    option sibling
                                    option grandparents
                                    option grandchild
                                    option parent's sibling

                    .form-group.has-feedback
                        label.col-sm-4(for="username") Username : *
                        .col-sm-8
                            input.form-control(type='text', name="username", placeholder='Username', id="username", required, onchange="valUsername()")
                            span#username_ok.glyphicon.glyphicon-ok.form-control-feedback.hidden
                            span#username_err.glyphicon.glyphicon-remove.form-control-feedback.hidden

                    .form-group.has-feedback
                        label.col-sm-4(for="password") Password : *
                        .col-sm-8
                            input.form-control(type='password', name="password", placeholder='Password', id="password", autocomplete="off", onchange="valPassword()",required)
                            span#password_ok.glyphicon.glyphicon-ok.form-control-feedback.hidden
                            span#password_err.glyphicon.glyphicon-remove.form-control-feedback.hidden
                
                    .form-group.has-feedback
                        .col-sm-4
                        .col-sm-8
                            input.form-control(type='password', name="c_password", placeholder='Confirm Password', id="c_password", autocomplete="off", onchange="confirmPassword()",required)
                            span#cpassword_ok.glyphicon.glyphicon-ok.form-control-feedback.hidden
                            span#cpassword_err.glyphicon.glyphicon-remove.form-control-feedback.hidden
                        
                    .form-group.has-feedback
                        label.col-sm-4(for="full_name") Full Name : *
                        .col-sm-8
                            input.form-control(type='text', name="full_name", placeholder='Full Name', id="full_name", autocomplete="off",required)

                    .form-group.has-feedback
                        label.col-sm-4(for="email") Email : *
                        .col-sm-8
                            input.form-control(type='email',name="email",placeholder="Email",id="email",onchange="valEmail()")
                            span#email_ok.glyphicon.glyphicon-ok.form-control-feedback.hidden
                            span#email_err.glyphicon.glyphicon-remove.form-control-feedback.hidden

                    .form-group.has-feedback
                        label.col-sm-4(for="phone") Phone Contact : *
                        .col-sm-8
                            input.form-control(type='tel',name="phone",placeholder="000-00000000",id="phone",required,onchange="valPhone()")
                            span#phone_ok.glyphicon.glyphicon-ok.form-control-feedback.hidden
                            span#phone_err.glyphicon.glyphicon-remove.form-control-feedback.hidden

                    .form-group
                        label.col-sm-4(for='address') Address :
                        .col-sm-8
                            input.form-control(type='text',placeholder="Enter Address",id="autocomplete",onFocus="geolocate()")

                    .form-group
                        label.col-sm-4(for="address") Street :
                        .col-sm-8
                            input.form-control(type='text',placeholder="Street 1",id="address1",disabled="true")

                    .form-group
                        .col-sm-4
                        .col-sm-8
                            input.form-control(type='text',placeholder="Street 2",id="address2",disabled="true")

                    .form-group
                        label.col-sm-4(for="postcode") Postcode :
                        .col-sm-8
                            input.form-control(id="postcode",type='number',name="postcode",placeholder="000000",disabled="true")

                    .form-group
                        label.col-sm-4(for="state") State :
                        .col-sm-8
                            select.form-control(id="state",name="state",placeholder="Please Select State",disabled="true")
                                option Selangor
                                option Kuala Lumpur
                                option Sarawak
                                option Johor
                                option Penang
                                option Sabah
                                option Perak
                                option Pahang
                                option Negeri Sembilan
                                option Kedah
                                option Malacca
                                option Terengganu
                                option Kelantan
                                option Perlis
                                option Labuan

                    .form-group
                        label.col-sm-4(for="country") Country :
                        .col-sm-8
                            input.form-control(id='country',type='text',name="country",placeholder="Country")

                    .form-group
                        label.col-sm-4.col-md-2(for="latitude") Latitude :
                        .col-sm-8.col-md-4
                            input.form-control(type='text',name="latitude",placeholder="latitude",id="latitude")

                        label.col-sm-4.col-md-2(for="longitude") Longitude :
                        .col-sm-8.col-md-4
                            input.form-control(type='text',name="longitude",placeholder="longitude",id="longitude")

                    div#map(style="width:500px;height:500px;")


                    .pull-right
                        a(onclick="submitRegisterElderly()")
                            button.btn.btn-primary(type="button") Submit
       
                        a(href='/')
                            button.btn.btn-default(type="button") Cancel
                    br
                    h4.red #{info}
    
    
    script(src='../javascripts/user.js')
    script(src='../javascripts/maploader.js')
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBwetz2ChC5sWil0yLOadbEQA_WJzullXc&signed_in=true&libraries=places&callback=initAutocomplete",async,defer)
