extends layout

block content
    body
        .container
            nav.navbar.navbar-default.navbar-fixed-top
                .container
                    include ./navbar.jade
            .container-fluid
                .row
                    .col-sm-12
                        h1 Login Page
                        p.lead --------------------
                        br
                        form(role='form', action="/login",method="post", style='max-width: 300px;')
                            .form-group
                                input.form-control(type='text', name="username", placeholder='Enter Username')
                            .form-group
                                input.form-control(type='password', name="password", placeholder='Password')
                            .row
                                .form-group.pull-right
                                    button.btn.btn-primary(type='submit') Submit
                                    button.btn.btn-default(type="button",href='/') Cancel
                            .row
                                .form-group.pull-right
                                    a(href='/resetpassword') Forgot password?
                            p.red #{info}