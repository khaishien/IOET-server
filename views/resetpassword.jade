extends layout
   
block content
    .container
        nav.navbar.navbar-default.navbar-fixed-top
                .container
                    include ./navbar.jade
        .container-fluid
            .row
                h1.header-dim.well Reset Password
                p.lead -----------------
                br
                h3 I forgot my Account username or password

                form#resetpasswordform(role='form',action="/resetpassword",method="post",style='max-width:500px;')
                    .form-group
                        label(for="resetpasswordinput") Enter your account username or email address : 
                        input.form-control(type='text',name="resetpasswordinput",id="resetpasswordinput",required)
                    .pull-right
                        button.btn.btn-primary(type="submit") Search
                h4.red #{info}